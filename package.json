    "css:build": "npx @tailwindcss/cli --input src/input.css --output ./dist/index.css --minify",
    "css:watch": "npx @tailwindcss/cli --input src/input.css --output ./dist/index.css --watch",
    "dev": "npm run storybook:dev",
    "lint": "eslint .",
    "prebuild": "npm run lint && npm run test && npm run css:build",
    "prepublish": "npm run build",
    "publish": "npm run build && npm publish",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:preview": "npm run storybook:build && vite preview",
    "tdd": "npx vitest",
    "test": "npx vitest run"
  },
